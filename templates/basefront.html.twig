{% extends "base.html.twig" %}

{% block title %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Conteneur pour uniformiser la hauteur des images */
        .image-container {
            height: 250px;       /* hauteur fixe pour toutes les images */
            overflow: hidden;    /* coupe ce qui dépasse */
        }
        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;   /* recadre sans déformer */
        }
    </style>
{% endblock %}

{% block top %}
    <div class="container">
        <!-- titre -->
        <div class="text-center">
            <h1>Mes voyages</h1>
            <p>Je vous présente les villes que j'ai visitées lors de mes voyages.</p>
        </div>
        <!-- menu -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('accueil') }}">Accueil</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('voyages') }}">Voyages</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                </li>
              </ul>
            </div>
        </nav>
    </div>
{% endblock %}

{% block body %}{% endblock %}
{% block javascripts %}{% endblock %}